<?XML VERSION="1.0" ENCODING="utf-8" ?>
<Pipeline name="overlayTest" layout="Horizon">
	<Bin name="srcbin" layout="Vertical">
		<Src Factory="FFScreenCapture" name="vScreenCap">
			<VideoFPS value="30" />
		</Src>
		<Src Factory="CameraCapture" name="vCamCap">
			<FilePath value="Logitech HD Pro Webcam C920" />
			<VideoWidth value="640" />
			<VideoHeight value="480" />
			<ImgFormat value="0" />
			<VideoFPS value="30" />
		</Src>	
	</Bin>

	<Filter Factory="FFComplexFilter" name="vFilter">
		<InPortCount value="2" />
		<OutPortCount value="1" />
		<FilterDescription value="[in0][in1]overlay=0:0,scale=1280:720,format=pix_fmts=yuv420p[out]" />
		<Port dir="in" id="0">
			<Media value="Video" />
		</Port>
		<Port dir="in" id="1">
			<Media value="Video" />
		</Port>
		<Port dir="out" id="0">
			<Media value="Video" />
			<VideoWidth value="1280" />
			<VideoHeight value="720" />
			<ImgFormat value="0" />
			<VideoFPS value="30" />
		</Port>
	</Filter>

	<Sink Factory="SDLVideoRender" name="render" />
						
</Pipeline>